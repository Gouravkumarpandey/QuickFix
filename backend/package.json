{
  "name": "complaease-backend",
  "version": "1.0.0",
  "description": "Backend API for ComplEase - Complaint Management System",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --watchAll --verbose",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "format": "prettier --write src/**/*.js",
    "seed": "node src/utils/seedDatabase.js",
    "backup": "node src/utils/backupDatabase.js",
    "migrate": "node src/utils/migrations.js"
  },
  "keywords": [
    "complaint-management",
    "nodejs",
    "express",
    "mongodb",
    "api"
  ],
  "author": "ComplEase Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "cors": "^2.8.5",
    "helmet": "^6.1.5",
    "morgan": "^1.10.0",
    "express-rate-limit": "^6.7.0",
    "compression": "^1.7.4",
    "dotenv": "^16.0.3",
    "multer": "^1.4.5",
    "sharp": "^0.32.0",
    "nodemailer": "^6.9.1",
    "@sendgrid/mail": "^7.7.0",
    "twilio": "^4.10.0",
    "express-validator": "^6.15.0",
    "express-async-handler": "^1.2.0",
    "cookie-parser": "^1.4.6",
    "express-session": "^1.17.3",
    "connect-mongo": "^5.0.0",
    "redis": "^4.6.5",
    "ioredis": "^5.3.2",
    "node-cron": "^3.0.2",
    "winston": "^3.8.2",
    "express-winston": "^4.2.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2",
    "joi": "^17.9.1",
    "uuid": "^9.0.0",
    "crypto": "^1.0.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "slugify": "^1.6.6",
    "validator": "^13.9.0",
    "axios": "^1.4.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "eslint": "^8.38.0",
    "prettier": "^2.8.7",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/src/tests/setup.js"],
    "testPathIgnorePatterns": ["/node_modules/", "/build/"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/tests/**",
      "!src/config/**"
    ]
  }
}
